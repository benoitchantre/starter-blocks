{
	"description": "A simple WordPress plugin for custom block development.",
	"license": "GPL-2.0-or-later",
	"private": true,
	"devDependencies": {
		"@wordpress/scripts": "^30.22.0"
	},
	"prettier": "@wordpress/prettier-config",
	"scripts": {
		"prebuild": "rm -rf dist",
		"build": "wp-scripts build --blocks-manifest",
		"check-engines": "wp-scripts check-engines",
		"format": "wp-scripts format",
		"lint:css": "wp-scripts lint-style",
		"lint:js": "wp-scripts lint-js",
		"start": "wp-scripts start --blocks-manifest",
		"create-block": "cd src && npx @wordpress/create-block@latest --no-plugin --no-wp-scripts --textdomain=starter-blocks --namespace=starter-blocks"
	}
}
